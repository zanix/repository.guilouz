                    <aspectratio aligny="top">stretch</aspectratio>
                    <fadetime>300</fadetime>
                    <texture background="true">$INFO[Container(655).ListItem.Property(Backup_Image)]</texture>
                </control>
                <control type="group">
                    <control type="image">
