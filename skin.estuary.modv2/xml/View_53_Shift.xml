<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="View_53_Shift">
		<control type="group">
			<description>Poster Viewtype</description>
			<centertop>50%</centertop>
			<left>0</left>
			<height>880</height>
			<control type="group">
				<visible>Control.IsVisible(53)</visible>
				<animation effect="fade" start="0" end="100" time="300">WindowOpen</animation>
				<animation effect="fade" start="100" end="0" time="300">WindowClose</animation>
				<animation effect="fade" time="200">VisibleChange</animation>
				<control type="image">
					<left>0</left>
					<top>760</top>
					<width>100%</width>
					<height>110</height>
					<texture colordiffuse="E6FFFFFF">dialogs/dialog-bg-nobo.png</texture>
				</control>
				<control type="image">
					<left>0</left>
					<top>35</top>
					<width>100%</width>
					<height>190</height>
					<texture colordiffuse="E6FFFFFF">dialogs/dialog-bg-nobo.png</texture>
				</control>
			</control>
			<control type="group">
				<visible>Control.IsVisible(53)</visible>
				<include>Visible_Right</include>
				<include>OpenClose_Right</include>
				<top>160</top>
				<control type="image">
					<left>600</left>
					<top>600</top>
					<width>340</width>
					<height>110</height>
					<visible>Control.HasFocus(53)</visible>
					<animation effect="fade" time="200">VisibleChange</animation>
					<texture colordiffuse="$VAR[SkinColorVar]">colors/grey.png</texture>
					<animation effect="slide" start="0,0" end="-365,0" time="300" tween="sine" easing="inout" condition="Integer.IsEqual(Container.Position,1) | Integer.IsEqual(Container.Position,0)">Conditional</animation>
					<animation effect="slide" start="0,0" end="-365,0" time="300" tween="sine" easing="inout" condition="Integer.IsEqual(Container.Position,0)">Conditional</animation>
					<animation effect="slide" start="0,0" end="365,0" time="300" tween="sine" easing="inout" condition="Integer.IsEqual(Container.Position,3) | Integer.IsEqual(Container.Position,4)">Conditional</animation>
					<animation effect="slide" start="0,0" end="365,0" time="300" tween="sine" easing="inout" condition="Integer.IsEqual(Container.Position,4)">Conditional</animation>
				</control>
				<control type="fixedlist" id="53">
					<left>-150</left>
					<top>0</top>
					<width>111%</width>
					<height>710</height>
					<focusposition>1</focusposition>
					<movement>0</movement>
					<pagecontrol>5199</pagecontrol>
					<scrolltime tween="cubic" easing="out">500</scrolltime>
					<orientation>horizontal</orientation>
					<visible>Container.Content(movies) | Container.Content(sets) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(musicvideos) | Container.Content(artists) | Container.Content(albums) | Container.Content(mixed) | Container.Content(images) | Container.Content(videos)</visible>
					<onleft>53</onleft>
					<onup condition="!Skin.HasSetting(KioskMode)">9000</onup>
					<ondown>5199</ondown>
					<onright>53</onright>
					<preloaditems>1</preloaditems>
					<viewtype label="31100">icon</viewtype>
					<itemlayout width="370">
						<control type="image">
							<depth>DepthContentPopout</depth>
							<left>0</left>
							<top>90</top>
							<width>370</width>
							<height>480</height>
							<aspectratio aligny="center" align="center">keep</aspectratio>
							<texture fallback="DefaultVideo.png">$VAR[ShiftThumbVar]</texture>
							<bordertexture border="21">overlays/shadow.png</bordertexture>
							<bordersize>20</bordersize>
							<visible>!Container.Content(artists) + !Container.Content(albums)</visible>
						</control>
						<control type="image">
							<depth>DepthContentPopout</depth>
							<left>0</left>
							<top>90</top>
							<width>370</width>
							<height>480</height>
							<aspectratio aligny="center" align="center">keep</aspectratio>
							<texture fallback="DefaultAudio.png">$VAR[ShiftThumbVar]</texture>
							<bordertexture border="21">overlays/shadow.png</bordertexture>
							<bordersize>20</bordersize>
							<visible>Container.Content(artists) | Container.Content(albums)</visible>
						</control>
						<control type="image">
							<left>20</left>
							<top>605</top>
							<width>330</width>
							<height>100</height>
							<aspectratio aligny="center">keep</aspectratio>
							<texture>$VAR[ViewClearLogoVar]</texture>
							<visible>!ListItem.IsCollection</visible>
						</control>
						<control type="image">
							<left>20</left>
							<top>600</top>
							<width>330</width>
							<height>110</height>
							<aspectratio aligny="center">stretch</aspectratio>
							<texture background="true" colordiffuse="BFFFFFFF">colors/black.png</texture>
							<visible>Skin.HasSetting(greyedout_watched) + Integer.IsGreater(ListItem.Playcount,0)</visible>
						</control>
						<control type="textbox">
							<left>25</left>
							<top>605</top>
							<width>320</width>
							<height>100</height>
							<align>center</align>
							<aligny>center</aligny>
							<label>$INFO[ListItem.Label]</label>
							<autoscroll time="3000" delay="3000" repeat="3000">True</autoscroll>
							<visible>[String.IsEmpty(ListItem.Art(tvshow.clearlogo)) + String.IsEmpty(ListItem.Art(clearlogo))] | ListItem.IsCollection</visible>
						</control>
						<control type="textbox">
							<left>25</left>
							<top>605</top>
							<width>320</width>
							<height>100</height>
							<align>center</align>
							<aligny>center</aligny>
							<label>$INFO[ListItem.Label]</label>
							<textcolor>grey</textcolor>
							<autoscroll time="3000" delay="3000" repeat="3000">True</autoscroll>
							<visible>[String.IsEmpty(ListItem.Art(tvshow.clearlogo)) + String.IsEmpty(ListItem.Art(clearlogo))] | ListItem.IsCollection</visible>
							<visible>Skin.HasSetting(greyedout_watched) + Integer.IsGreater(ListItem.Playcount,0)</visible>
						</control>
						<control type="image">
							<left>169</left>
							<top>560</top>
							<width>32</width>
							<height>32</height>
							<texture>$VAR[WallWatchedIconVar]</texture>
						</control>
					</itemlayout>
					<focusedlayout width="370">
						<control type="image">
							<depth>DepthContentPopout</depth>
							<left>0</left>
							<top>90</top>
							<width>370</width>
							<height>480</height>
							<aspectratio aligny="center" align="center">keep</aspectratio>
							<texture fallback="DefaultVideo.png">$VAR[ShiftThumbVar]</texture>
							<bordertexture border="21">overlays/shadow.png</bordertexture>
							<bordersize>20</bordersize>
							<visible>!Container.Content(artists) + !Container.Content(albums)</visible>
						</control>
						<control type="image">
							<depth>DepthContentPopout</depth>
							<left>0</left>
							<top>90</top>
							<width>370</width>
							<height>480</height>
							<aspectratio aligny="center" align="center">keep</aspectratio>
							<texture fallback="DefaultAudio.png">$VAR[ShiftThumbVar]</texture>
							<bordertexture border="21">overlays/shadow.png</bordertexture>
							<bordersize>20</bordersize>
							<visible>Container.Content(artists) | Container.Content(albums)</visible>
						</control>
						<control type="image">
							<left>20</left>
							<top>605</top>
							<width>330</width>
							<height>100</height>
							<aspectratio aligny="center">keep</aspectratio>
							<texture>$VAR[ViewClearLogoVar]</texture>
							<visible>!ListItem.IsCollection</visible>
						</control>
						<control type="textbox">
							<left>25</left>
							<top>605</top>
							<width>320</width>
							<height>100</height>
							<align>center</align>
							<aligny>center</aligny>
							<label>$INFO[ListItem.Label]</label>
							<autoscroll time="3000" delay="3000" repeat="3000">True</autoscroll>
							<visible>[String.IsEmpty(ListItem.Art(tvshow.clearlogo)) + String.IsEmpty(ListItem.Art(clearlogo))] | ListItem.IsCollection</visible>
						</control>
						<control type="image">
							<left>169</left>
							<top>560</top>
							<width>32</width>
							<height>32</height>
							<texture>$VAR[WallWatchedIconVar]</texture>
						</control>
					</focusedlayout>
				</control>
			</control>
			<control type="group">
				<visible>Control.IsVisible(53)</visible>
				<include>Visible_Right</include>
				<include>OpenClose_Right</include>
				<control type="group">
					<width>50%</width>
					<include content="ShiftTextbox">
						<param name="textbox_id" value="53200" />
						<param name="textbox_content" value="$VAR[ShiftLeftTextBoxVar]" />
					</include>
				</control>
				<control type="group">
					<left>50%</left>
					<width>50%</width>
					<include content="ShiftTextbox">
						<param name="textbox_id" value="53300" />
						<param name="textbox_content" value="$VAR[ShiftRightTextBoxVar]" />
					</include>
				</control>
				<control type="list">
					<left>20</left>
					<top>45</top>
					<width>903</width>
					<height>170</height>
					<orientation>horizontal</orientation>
					<autoscroll time="1500">true</autoscroll>
					<visible>ListItem.IsCollection</visible>
					<itemgap>5</itemgap>
					<focusedlayout height="170" width="129">
						<control type="image">
							<left>5</left>
							<top>0</top>
							<right>5</right>
							<bottom>0</bottom>
							<aspectratio>stretch</aspectratio>
							<texture background="true" fallback="DefaultVideoCover.png">$INFO[ListItem.Thumb]</texture>
							<bordertexture>colors/white.png</bordertexture>
							<bordersize>1</bordersize>
						</control>
					</focusedlayout>
					<itemlayout height="170" width="129">
						<control type="image">
							<left>5</left>
							<top>0</top>
							<right>5</right>
							<bottom>0</bottom>
							<aspectratio>stretch</aspectratio>
							<texture background="true" fallback="DefaultVideoCover.png">$INFO[ListItem.Thumb]</texture>
							<bordertexture>colors/white.png</bordertexture>
							<bordersize>1</bordersize>
						</control>
					</itemlayout>
					<content sortby="year" sortorder="ascending">$VAR[InfoListPathVar]</content>
				</control>
				<control type="list">
					<left>20</left>
					<top>45</top>
					<width>900</width>
					<height>170</height>
					<orientation>horizontal</orientation>
					<autoscroll time="1500">true</autoscroll>
					<visible>String.IsEqual(listitem.dbtype,artist)</visible>
					<itemgap>5</itemgap>
					<focusedlayout height="170" width="180">
						<control type="image">
							<left>5</left>
							<top>0</top>
							<right>5</right>
							<bottom>0</bottom>
							<aspectratio>stretch</aspectratio>
							<texture background="true" fallback="DefaultAudio.png">$INFO[ListItem.Thumb]</texture>
							<bordertexture>colors/white.png</bordertexture>
							<bordersize>1</bordersize>
						</control>
					</focusedlayout>
					<itemlayout height="170" width="180">
						<control type="image">
							<left>5</left>
							<top>0</top>
							<right>5</right>
							<bottom>0</bottom>
							<aspectratio>stretch</aspectratio>
							<texture background="true" fallback="DefaultAudio.png">$INFO[ListItem.Thumb]</texture>
							<bordertexture>colors/white.png</bordertexture>
							<bordersize>1</bordersize>
						</control>
					</itemlayout>
					<content sortby="year" sortorder="ascending">$VAR[InfoListPathVar]</content>
				</control>
			</control>
		</control>
	</include>
	<include name="ShiftTextbox">
		<control type="group">
			<animation effect="fade" time="200" start="0" end="100" condition="!String.IsEmpty(Control.GetLabel($PARAM[textbox_id]))">Conditional</animation>
			<animation effect="fade" time="200" start="100" end="0" condition="String.IsEmpty(Control.GetLabel($PARAM[textbox_id]))">Conditional</animation>
			<control type="textbox" id="$PARAM[textbox_id]">
				<left>30</left>
				<top>45</top>
				<right>30</right>
				<height>170</height>
				<align>justify</align>
				<label>$PARAM[textbox_content]</label>
				<shadowcolor>text_shadow</shadowcolor>
				<textcolor>$VAR[SkinColorVar]</textcolor>
				<autoscroll delay="10000" time="4000" repeat="10000">Skin.HasSetting(autoscroll)</autoscroll>
			</control>
		</control>
	</include>
</includes>